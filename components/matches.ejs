<!-- 경기 기록 & 일정 탭 -->
<div class="tab-pane fade" id="matches" role="tabpanel">
    <div class="filter-section">
        <div class="filter-group">
            <span class="filter-label">
                <i class="fas fa-map-marker-alt me-2"></i>지역 선택
            </span>
            <div class="filter-buttons" id="matchRegionFilterButtons">
                <button class="filter-btn active" data-value="">모든 지역</button>
            </div>
        </div>
        
        <div class="filter-group">
            <span class="filter-label">
                <i class="fas fa-trophy me-2"></i>리그 선택
            </span>
            <div class="filter-buttons" id="matchLeagueFilterButtons">
                <button class="filter-btn active" data-value="">모든 리그</button>
            </div>
        </div>
        
        <div class="filter-group">
            <span class="filter-label">
                <i class="fas fa-flag me-2"></i>경기 상태
            </span>
            <div class="filter-buttons" id="matchStatusFilterButtons">
                <button class="filter-btn active" data-value="">전체</button>
                <button class="filter-btn" data-value="완료">완료</button>
                <button class="filter-btn" data-value="예정">예정</button>
            </div>
        </div>
        
        <div class="filter-group">
            <span class="filter-label">
                <i class="fas fa-users me-2"></i>팀 선택
            </span>
            <div class="filter-buttons" id="matchTeamFilterButtons">
                <button class="filter-btn active" data-value="">모든 팀</button>
            </div>
        </div>
        
        <div class="text-end">
            <button class="btn btn-primary" onclick="loadMatches()">
                <i class="fas fa-search me-2"></i>경기 검색
            </button>
        </div>
    </div>

    <div id="matchesContainer">
        <div class="loading-spinner">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">경기 데이터를 불러오는 중...</p>
        </div>
    </div>
</div>