<!-- 뉴스 피드 탭 -->
<div class="tab-pane fade show active" id="newsfeed" role="tabpanel">
    <!-- 메인 컨텐츠 영역 -->
    <div class="container-fluid">
        <div class="row">
            <!-- 전체: 다가오는 경기 (전면 확장) -->
            <div class="col-12">
                <div class="newsfeed-section">
                    <h2 class="section-title-enhanced">
                        ⚽ 다가오는 경기
                    </h2>
                    
                    <!-- 리그 필터 섹션 -->
                    <div class="league-filter-section mb-4">
                        <div class="filter-header">
                            <i class="fas fa-filter me-2"></i>
                            <span class="filter-label">리그 필터</span>
                        </div>
                        <div class="league-filter-container" id="upcomingMatchesLeagueFilter">
                            <div class="league-filter-buttons">
                                <button class="league-filter-btn active" data-league="">전체</button>
                            </div>
                        </div>
                        
                        <!-- 오늘로 이동 버튼 -->
                        <div class="today-navigation mt-3">
                            <button class="btn btn-outline-primary btn-sm" id="goToTodayBtn" type="button">
                                <i class="fas fa-calendar-day me-1"></i>
                                오늘로 이동
                            </button>
                        </div>
                    </div>
                    
                    <div id="upcomingMatchesSection">
                        <div class="loading-spinner-enhanced">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-3">다가오는 경기를 불러오는 중...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>